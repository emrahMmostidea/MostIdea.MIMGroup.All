
@using System.Globalization
@using MostIdea.MIMGroup.Web.Areas.App.Models.Common.Modals
@using MostIdea.MIMGroup.Web.Areas.App.Models.Cities
@model CreateOrEditCityModalViewModel
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditCity")) : L("CreateNewCity")))

<div class="modal-body">
    <div id="CityInformationsTab">
        <form name="CityInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
            <input type="hidden" name="id" value="@Model.City.Id" />
            }

            <div class="form-group">
                <label for="countryId">@L("Country")</label>
                @Html.DropDownList("countryId", new SelectList(Model.CityCountryList,"Id","DisplayName", (Model.IsEditMode ? Model.City.CountryId.ToString() : "")),@L("SelectACountry"), new { @class = "form-control" , @required="required" })
            </div>

            <div class="form-group">
                <label for="City_Name">@L("Name")</label>
                <input class="form-control" id="City_Name" value="@Model.City.Name" type="text" name="name" required />
            </div>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")